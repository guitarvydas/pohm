datalog {

Program = Statement+
Statement =
    Clause "."                          -- fact
  | Clause ":-" Clause Gen_1* "."   -- rule

Clause = Predicate "(" IDList ")"

Predicate = LowerCaseIdent
IDList = ID Gen_2*
ID = Variable | Literal

Variable = CapitalizedIdent
Literal = LowerCaseIdent

LowerCaseIdent = "a" .. "z" identRest*
CapitalizedIdent = "A" .. "Z" identRest*

identRest = "0-9" | "_" | "A" .. "Z" | "a" .. "z"
Gen_1 =  "," Clause
Gen_2 =  "," ID

}

